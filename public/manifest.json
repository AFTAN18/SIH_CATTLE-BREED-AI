{
  "name": "Bharat Pashudhan - Cattle Breed Identification",
  "short_name": "BPA Breed ID",
  "description": "AI-powered cattle and buffalo breed identification system for Indian Field Level Workers",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#16a34a",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["agriculture", "education", "productivity", "utilities"],
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "16x16 32x32 48x48",
      "type": "image/x-icon"
    }
  ],
  "shortcuts": [
    {
      "name": "Camera Capture",
      "short_name": "Camera",
      "description": "Quick access to camera for breed identification",
      "url": "/camera"
    },
    {
      "name": "Manual Identification",
      "short_name": "Manual ID",
      "description": "Manual breed identification tools",
      "url": "/manual-identification"
    },
    {
      "name": "Learning Center",
      "short_name": "Learn",
      "description": "Breed identification learning resources",
      "url": "/learning"
    },
    {
      "name": "Analytics Dashboard",
      "short_name": "Analytics",
      "description": "View performance analytics and reports",
      "url": "/analytics"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://bharat-pashudhan.vercel.app"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+cattle",
      "url": "/?breed=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/camera",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "permissions": [
    "camera",
    "geolocation",
    "notifications",
    "background-sync",
    "storage"
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "AI-Powered",
    "Offline Support",
    "Multi-Language"
  ],
  "developer": {
    "name": "Government of India",
    "url": "https://dahd.nic.in"
  },
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
}
