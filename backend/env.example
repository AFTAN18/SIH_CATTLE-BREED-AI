# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cattle_breed_db
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# AWS S3 Configuration (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
ML_MODEL_PATH=./models/cattle_breed_model
ML_CONFIDENCE_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Government API Configuration (for data sync)
GOV_API_URL=https://api.government.gov.in
GOV_API_KEY=your-government-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:5173

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_PREFIX=cattle_breed

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=cattle_breed_cache

# Feature Flags
ENABLE_ML_PREDICTION=true
ENABLE_EXPERT_REVIEW=true
ENABLE_OFFLINE_SYNC=true
ENABLE_REAL_TIME_UPDATES=true
